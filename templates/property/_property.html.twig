<div class="card mb-4">
    {% if property.fileName %}
        <img src="{{ vich_uploader_asset(property, 'imageFile') | imagine_filter('thumb') }}" alt="{{ property.title }}" class="card-img-top">
    {% else %}
        <img src="{{ 'images/properties/empty.png' | imagine_filter('thumb') }}" alt="{{ property.title }}" class="card-img-top">
    {% endif %}
    <div class="card-body">
        <h5 class="card-title">
            <a href="{{ path('property.show', {slug: property.slug, id : property.id }) }}">
                {{ property.title }}
            </a>
            <p class="card-text">{{ property.surface}} m² - {{ property.city }} {{ property.postalCode }}</p>
            <div class="text-primary" style="font-size:2rem; font-weight:bold;">
                {{ property.formattedPrice }} €
            </div>
        </h5>
    </div>
</div>